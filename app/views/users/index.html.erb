<h1> All Users</h1>

<ul class="users">
    <% @users.each do |user| %>
        <li>
            <% if current_user?(user) %>
                <%= link_to user.name, user %> (あなた)
            <% else %>
                <%= link_to user.name, user %>
            <% end %>
        </li>
    <% end %>
</ul>